@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel
@using Spice.Common
@using Spice.Extensions

@{
    ViewData[Constant.Title] = Constant.Action_Delete;
    Layout = Constant.View_Layout;
}

<br />
<h2>Delete Sub Category</h2>
<br />

<div class="border backgroundWhite row">
    <div class="col-10">
        <form asp-action="@Constant.Action_Delete">
            <input type="hidden" asp-for="SubCategory.Id" />
            <input type="hidden" asp-for="SubCategory.CategoryId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select id="ddlCategoryList" asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)" disabled class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" disabled class="form-control" />
                </div>
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-5 offset-3">
                    <partial name="@Constant.PartialView_DeleteAndBackToListButtonPartial" model="Model.SubCategory.Id" />
                </div>
            </div>
        </form>
    </div>
</div>
