@using Spice.Common
@using Spice.Extensions
@model Spice.Models.ViewModels.MenuItemViewModel

@{
    ViewData[Constant.Title] = Constant.MenuItem;
    Layout = Constant.View_Layout;
}
<style>
    .tox-tinymce {
        border: 3px solid #ECECEC
    }

    img{
        pointer-events: none;
    }
</style>

<br />
<h2>Delete MenuItem</h2>
<br />

<form method="post" asp-action="@Constant.Action_Delete">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="MenuItem.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-8 border-right">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.MenuItem.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Price" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Price" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.MenuItem.CategoryId" id="CategoryId" asp-items="Model.Category.ToSelectListItem(Model.MenuItem.CategoryId)" disabled class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.MenuItem.SubCategoryId" name="SubCategoryId" id="SubCategoryId" asp-items="Model.SubCategory.ToSelectListItem(Model.MenuItem.SubCategoryId)" disabled class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.MenuItem.Spicyness" id="Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" disabled class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="col-3 offset-1">
                <img src="@Model.MenuItem.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="col-8 offset-4">
                    <partial name="@Constant.PartialView_DeleteAndBackToListButtonPartial" model="@Model.MenuItem.Id" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>

}