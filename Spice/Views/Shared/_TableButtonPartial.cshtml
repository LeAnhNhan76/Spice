@using Spice.Common
@model int

<td style="width: 150px">
    <div class="btn-group" role="group">
        <a class="btn btn-primary text-white" asp-action="@Constant.Action_Edit" asp-route-id="@Model">
            <i class="fas fa-edit"></i>
        </a>
        <a class="btn btn-success text-white" asp-action="@Constant.Action_Details" asp-route-id="@Model">
            <i class="fas fa-list-alt"></i>
        </a>
        <a class="btn btn-danger text-white" asp-action="@Constant.Action_Delete" asp-route-id="@Model">
            <i class="fas fa-trash-alt"></i>
        </a>
    </div>
</td>
